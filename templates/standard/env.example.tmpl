# Server Configuration
PORT=8080
ENVIRONMENT=development
READ_TIMEOUT=15
WRITE_TIMEOUT=15

{{if .UseDatabase}}
# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME={{.ProjectName}}
DB_SSLMODE=disable
{{end}}

{{if .UseLogger}}
# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
{{end}}

{{if .UseRedis}}
# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
{{end}}

{{if .UseJWT}}
# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=24h
{{end}}
