                            <label class="dependency-item flex items-start p-4 border border-gray-200 rounded-lg hover:border-cyan-500 hover:bg-cyan-50 cursor-pointer transition-all">
                                <input type="checkbox" class="mt-1 w-4 h-4 text-cyan-600 border-gray-300 rounded focus:ring-cyan-500">
                                <div class="ml-3 flex-1">
                                    <div class="font-semibold text-gray-900">GoMock</div>
                                    <div class="text-sm text-gray-600 mt-1">Mocking framework for Go</div>
                                    <div class="text-xs text-gray-500 mt-2">go.uber.org/mock</div>
                                </div>
                            </label>
                            <label class="dependency-item flex items-start p-4 border border-gray-200 rounded-lg hover:border-cyan-500 hover:bg-cyan-50 cursor-pointer transition-all">
                                <input type="checkbox" class="mt-1 w-4 h-4 text-cyan-600 border-gray-300 rounded focus:ring-cyan-500">
                                <div class="ml-3 flex-1">
                                    <div class="font-semibold text-gray-900">Ginkgo</div>
                                    <div class="text-sm text-gray-600 mt-1">BDD-style testing framework</div>
                                    <div class="text-xs text-gray-500 mt-2">github.com/onsi/ginkgo/v2</div>
                                </div>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="px-6 py-4 border-t border-gray-200 bg-gray-50 flex justify-between items-center">
                <div class="text-sm text-gray-600">
                    <span id="selected-count">0</span> dependencies selected
                </div>
                <div class="flex space-x-3">
                    <button onclick="closeDrawer()" class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-100 transition-colors">
                        Cancel
                    </button>
                    <button onclick="addSelectedDependencies()" class="px-6 py-2 bg-emerald-600 text-white rounded-lg hover:bg-emerald-700 transition-colors font-semibold">
                        Add Selected
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Show drawer when clicking Add Dependencies
        document.querySelector('.sticky button').addEventListener('click', function() {
            openDrawer();
        });

        function openDrawer() {
            const drawer = document.getElementById('dependency-drawer');
            drawer.classList.remove('hidden');
            // Trigger reflow for animation
            setTimeout(() => {
                drawer.querySelector('.absolute.right-0').classList.add('translate-x-0');
            }, 10);
        }

        function closeDrawer() {
            const drawer = document.getElementById('dependency-drawer');
            drawer.querySelector('.absolute.right-0').classList.remove('translate-x-0');
            setTimeout(() => {
                drawer.classList.add('hidden');
            }, 300);
        }

        function showCategory(category) {
            // Hide all category contents
            document.querySelectorAll('.category-content').forEach(content => {
                content.classList.add('hidden');
            });
            
            // Remove active state from all buttons
            document.querySelectorAll('.category-btn').forEach(btn => {
                btn.classList.remove('bg-white', 'shadow-sm');
            });
            
            // Show selected category
            document.getElementById('category-' + category).classList.remove('hidden');
            
            // Add active state to clicked button
            const activeBtn = document.querySelector(`[data-category="${category}"]`);
            activeBtn.classList.add('bg-white', 'shadow-sm');
        }

        function filterDependencies(query) {
            const searchTerm = query.toLowerCase();
            document.querySelectorAll('.dependency-item').forEach(item => {
                const text = item.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    item.classList.remove('hidden');
                } else {
                    item.classList.add('hidden');
                }
            });
        }

        function updateSelectedCount() {
            const count = document.querySelectorAll('.dependency-item input[type="checkbox"]:checked').length;
            document.getElementById('selected-count').textContent = count;
        }

        function addSelectedDependencies() {
            // This would add the selected dependencies to the main panel
            // For now, just close the drawer
            updateSelectedCount();
            closeDrawer();
        }

        // Update count when checkboxes change
        document.addEventListener('change', function(e) {
            if (e.target.type === 'checkbox' && e.target.closest('.dependency-item')) {
                updateSelectedCount();
            }
        });

        // Close drawer on Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeDrawer();
            }
        });
    </script>
</body>
</html>
